# ===============================================
# Docker Compose Environment Variables - Example
# ===============================================
#
# Instructions:
# 1. Copy this file to .env in the docker directory
# 2. Update values with your actual configuration
# 3. Never commit .env to version control
#
# ===============================================

# -----------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------
POSTGRES_DB=soldent
POSTGRES_USER=soldent_user
POSTGRES_PASSWORD=change-this-secure-password-in-production
POSTGRES_PORT=5432

# -----------------------------------------------
# Redis Configuration
# -----------------------------------------------
REDIS_PASSWORD=change-this-redis-password-in-production
REDIS_PORT=6379

# -----------------------------------------------
# Backend Configuration
# -----------------------------------------------
BACKEND_PORT=3001

# JWT
JWT_SECRET=change-this-jwt-secret-key-min-32-characters-long
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000

# API
API_VERSION=v1
API_PREFIX=/api

# -----------------------------------------------
# Frontend Configuration
# -----------------------------------------------
FRONTEND_PORT=3000

# Public variables (exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_NAME=Soldent
NEXT_PUBLIC_APP_VERSION=1.0.0

# -----------------------------------------------
# pgAdmin (Development only)
# -----------------------------------------------
PGADMIN_EMAIL=admin@soldent.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# -----------------------------------------------
# Redis Commander (Development only)
# -----------------------------------------------
REDIS_COMMANDER_PORT=8081

# -----------------------------------------------
# Development Settings
# -----------------------------------------------
DEBUG=app:*
LOG_LEVEL=debug
WATCHPACK_POLLING=true
